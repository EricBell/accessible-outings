# Database Configuration
# For PostgreSQL (production/development with NAS):
# DATABASE_URL=postgresql://username:password@your-nas-ip:5432/accessible_outings

# For SQLite (Docker/local development - leave DATABASE_URL unset or comment out):
# DATABASE_URL=sqlite:///accessible_outings.db

# If DATABASE_URL is not set, SQLite will be used by default
DATABASE_URL=postgresql://username:password@your-nas-ip:5432/accessible_outings

# API Keys
# Get from Google Cloud Console - Places API
GOOGLE_PLACES_API_KEY=your_google_places_api_key_here

# Get from Yelp Developers (for future integration)
YELP_API_KEY=your_yelp_api_key_here

# Flask Configuration
SECRET_KEY=your_very_secret_key_here_change_this_in_production
FLASK_ENV=development
FLASK_DEBUG=True

# Development Settings
# Set to True to bypass authentication for testing
BYPASS_AUTH=True

# Default user ID when bypassing auth (must exist in database)
DEFAULT_USER_ID=1

# Application Settings
APP_NAME=Accessible Outings Finder
DEFAULT_SEARCH_RADIUS_MILES=30
MAX_SEARCH_RADIUS_MILES=60
CACHE_TIMEOUT_HOURS=24

# Geocoding Settings
# Default location for Southern New Hampshire
DEFAULT_LATITUDE=43.2081
DEFAULT_LONGITUDE=-71.5376

# Security Settings (for production)
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# Logging
LOG_LEVEL=INFO
LOG_FILE=app.log
